<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pogodeo.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>

            <!--Global Styles-->
            <Color x:Key="WhitePure">#FFFFFF</Color>
            <Color x:Key="RedPrimary">#FF1507</Color>
            <Color x:Key="BluePrimary">#3C0EFF</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#3F51B5" />
                <Setter Property="BarTextColor" Value="{StaticResource WhitePure}" />
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>